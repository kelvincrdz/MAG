# Django Settings
DEBUG=True  # Mude para False em produção
SECRET_KEY=your-secret-key-here-change-this-in-production

# Hosts permitidos (separados por vírgula, sem espaços)
# Em produção: adicione seu domínio específico primeiro
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (URLs completas com https://)
# Em produção: adicione seu domínio específico
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Security Settings (True em produção com HTTPS)
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# Database
# Deixe vazio para usar SQLite local
# Em produção (Render): DATABASE_URL será fornecido automaticamente
DATABASE_URL=

# MAG Upload Limits (opcional)
MAG_MAX_PACKAGE_BYTES=314572800  # 300MB
MAG_MAX_FILE_BYTES=104857600     # 100MB

